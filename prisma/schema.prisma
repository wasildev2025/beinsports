// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  email     String?
  fullname  String?  // Added for dashboard display
  balance   Float    @default(0.0)
  disabled  Boolean  @default(false) // Added for user management (enable/disable)
  role      String   @default("user") // admin, reseller, user
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  operations Operation[]
  notifications Notification[] // Relation to notifications
}

model Operation {
  id          Int      @id @default(autoincrement())
  type        String   // CHECK, RENEW, BUY
  details     String
  status      String   // SUCCESS, FAILED, PENDING
  cost        Float    @default(0.0) // This likely tracked cost for other ops, keeping it.
  amount      Float    @default(0.0) // Added for ADD_BALANCE
  oldBalance  Float    @default(0.0) // Added for history tracking
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model Notification {
  id          Int      @id @default(autoincrement())
  text        String
  createdAt   DateTime @default(now())
  userId      Int?     // Optional: if null, it's a global notification
  user        User?    @relation(fields: [userId], references: [id])
}
